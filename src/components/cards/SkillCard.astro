---
export interface Props {
  skill: string;
  icon: string;
}

const { skill, icon } = Astro.props;
---

<div class="skill-card">
  <img src={icon} alt={`${skill} icon`} class="skill-icon" />
  <span class="skill-name">{skill}</span>
</div>
<style>
  .skill-card {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 32px;
    opacity: 0.8;
    border-radius: 32px;
    border: 1px solid var(--shade2);
    row-gap: 16px;
    transition: 0.3s opacity ease-in-out;
    background-color: var(--shade2);
    box-sizing: border-box;
    filter: grayscale(5%);
    width: 100%;
    height: 100%;
  }
  .skill-card:hover {
    opacity: 1;
    filter: grayscale(0%);
  }
  .skill-icon {
    width: 50px;
  }
  .skill-name {
    font-family: var(--font-bold);
    color: var(--shade4);
    font-size: 16px;
    margin: 0px;
  }
</style>
